<%= form_for @recipe do |rec| %>
  <%= rec.label :title %>
  <%= rec.text_field :title %> <br>
  <%= fields_for :ingredients do |ing| %>
    <%= ing.label :name_1 %>
    <%= ing.text_field :name_1 %>
    <br>
    <%= ing.label :quantity_1 %>
    <%= ing.text_field :quantity_1 %>
    <br>
    <%= ing.label :name_2 %>
    <%= ing.text_field :name_2 %>
    <br>
    <%= ing.label :quantity_2 %>
    <%= ing.text_field :quantity_2 %>
  <% end %>
  <br>
  <%= rec.submit "Create Recipe" %>
<% end %>
